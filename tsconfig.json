{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "incremental": true,
    "strict": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "wasm-to-typescript-types": [
        "./packages/wasm-to-typescript-types/index.d.ts"
      ],
      "conformance-tests/*": ["./packages/conformance-tests/*"],
      "ts-type-math": ["./packages/ts-type-math/index.d.ts"],
      "playground/*": ["./packages/playground/*"]
    }
  }
}
